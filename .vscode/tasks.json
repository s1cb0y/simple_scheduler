{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build main.c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "scheduler",
                "main.c",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Debug main.c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "scheduler",
                "main.c",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
